@BillingService_HostAddress = http://localhost:8085

### Test CalculateBill - Calculate bill for student 2 with amount 5000
POST {{BillingService_HostAddress}}/BillingService.svc HTTP/1.1
Content-Type: text/xml; charset=utf-8
SOAPAction: "http://billing.example.com/IBillingService/CalculateBill"

<?xml version="1.0" encoding="utf-8"?>
<soap:Envelope xmlns:soap="http://schemas.xmlsoap.org/soap/envelope/" xmlns:tns="http://billing.example.com/">
    <soap:Body>
        <tns:CalculateBill>
            <studentId>2</studentId>
            <amount>5000</amount>
        </tns:CalculateBill>
    </soap:Body>
</soap:Envelope>

